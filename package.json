{
  "name": "Dashboard",
  "version": "1.0.0",
  "description": "A dashboard for common household needs.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "auth": "./_script/auth/auth.sh",
    "pi": "export DISPLAY=:0 && npm start",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "your.id",
    "mac": {
      "category": "your.app.category.type"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico"
    }
  },
  "author": "Rawson Inc",
  "devDependencies": {
    "electron": "~1.7.5",
    "electron-builder": "^19.50.0"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "cheerio": "^1.0.0-rc.3",
    "datejs": "^1.0.0-rc3",
    "googleapis": "^21.3.0",
    "jquery": "^3.5.1",
    "mustache": "^2.3.0",
    "openweathermap-js": "^1.0.1"
  }
}
